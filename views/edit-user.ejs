                        var success_msg = '<%= success_msg %>';
                
                        if (error_msg) {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error!',
                                text: error_msg,
                                showConfirmButton: true
                            });
                        }
                
                        if (success_msg) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Success!',
                                text: success_msg,
                                showConfirmButton: true
                            });
                        }
                    });
